<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :shubetu, "種別" %>
      <%= f.select :shubetu, [["利用者", "riyousha"],
                    ["ケアマネージャー", "care_manager"],["施設", "sisetu"] ] %>

      <%= f.label :name, "お名前" %>
      <%= f.text_field :name %>

      <%= f.label :email, "e-mail" %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "登録します", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
