<% provide(:title, "Edit user") %>
<h1>ユーザー情報更新</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :shubetu, "種別" %>
      <%= f.select :shubetu, [["利用者", "riyousha"],
                    ["ケアマネージャー", "care_manager"],["施設", "sisetu"] ] %>

      <%= f.label :お名前 %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "更新します", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">画像の変更</a>
  </div>
</div>